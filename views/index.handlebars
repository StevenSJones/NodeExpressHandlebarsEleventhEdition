{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.
     * Create a button in `index.handlebars` that will submit the user input into the database. --}}
<div class="container">
  <div class="row">
    <div class="col text-center">

      <div class="jumbotron">
        <h1 class="display-4">Eat Da Burger!</h1>

      </div>

    </div>
  </div>

  <div class="text-center">
    <q>This is a simple app that allows you to add and devour a burger</q>
    </br>
    <span align="center" ; class="text-muted">&copy; Steven Jones 2020</span>
  </div>

  <div class="row">
    <div class="col-6">

      <h3 class="text-center">Burgers:</h3>
      <hr style="color: rgb(2, 19, 252); border-top: 1px dotted  rgb(2, 19, 252); width: 25%" />
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-6">
      <h3 class="text-center">Devoured Burgers:</h3>
      <hr style="color: rgb(2, 19, 252); border-top: 1px dotted  rgb(2, 19, 252); width: 25%" />
      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false save=true}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2>Add a Burger</h2>
      <hr style="color: rgb(2, 19, 252); border-top: 1px dotted  rgb(2, 19, 252); width: 25%" />
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Type:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">Hungry?</label><br>
          {{!-- <input type="radio" name="devoured" value="1" checked> Devour!<br>
    <input type="radio" name="devoured" value="0"> For later --}}
        </div>

        <button class="btn btn-dark" type="submit">Add Burger</button>
      </form>

    </div>
  </div>
  <div class="row">

    <!--A carousel for the screenshots to the three  assignments that i have included-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="../assets/img/triple-burger.png" class="d-block w-100 d-block h-30" target="_blank"
            alt="Code Quiz screenshot">
        </div>
        <div class="carousel-item">
          <img src="../assets/img/impossible-burger.png" class="d-block w-100 d-block h-30" target="_blank"
            alt="Random Number Generator screenshot">
        </div>
        <div class="carousel-item">
          <img src="../assets/img/truffle-burger.png" target="_blank" class="d-block w-100 d-block h-30"
            alt="Project Number 1 screenshot">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
    </div>
  </div>
</div>
</div>

<footer class="footer mt-auto py-3 bg">
  <div class="container d-flex justify-content-center">
    <!--sticky footer-->
    <!--&copy is used to create the copywrite symbol-->
  </div>
</footer>