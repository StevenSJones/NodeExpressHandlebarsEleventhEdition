{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.
     * Create a button in `index.handlebars` that will submit the user input into the database. --}}
<div class="container">
  <div class="row">
    <div class="col text-center">

      <div class="jumbotron">
        <h1 class="display-4">Eat Da Burger!</h1>
        <p class="lead">This is a simple app that allows you to add and devour a burger</p>

      </div>

    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <h3 class="text-center">Burgers:</h3>
      <hr/>
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col-6">
      <h3 class="text-center">Devoured Burgers:</h3>
      <hr/>
      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false save=true}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Type:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="devoured">Hungry?</label><br>
          {{!-- <input type="radio" name="devoured" value="1" checked> Devour!<br>
    <input type="radio" name="devoured" value="0"> For later --}}
        </div>

        <button class="btn btn-dark" type="submit">Add Burger</button>
      </form>

    </div>
  </div>
</div>