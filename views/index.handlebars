{{!-- * Setup the `index.handlebars` to have the template that Handlebars can render onto.
     * Create a button in `index.handlebars` that will submit the user input into the database. --}}
<h1 class="text-center">Eat Da Burger!</h1>
<div class="container">
  <div class="row">
    <div class="col text-left">
      <h2>Available Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Devoured Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> devoured-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button class="burgerSubmit" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>